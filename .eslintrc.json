{
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-native/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": {
        "prettier": {}
    },
    "settings": {
      "react": {
        "version": "detect"
      },
      "react-native": {
        "version": "detect"
      }
    },
    "rules": {
      "no-console": "warn",
      "no-debugger": "warn",
      "no-unused-vars": "warn",
      "react/prop-types": "off",
      "react-native/split-platform-components": "off",
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",
      "react-native/no-unused-styles": "warn",
      "react-native/space-infix-ops": "warn"
    }
  }